<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>

<VBox 
	xmlns="http://javafx.com/javafx/21" 
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="fr.cci.mavenhello.controllers.impl.HomeController"
	>
	<children>
		<Label id="label" fx:id="label" />
		<VBox fx:id="labels">
			<children></children>
		</VBox>
		<HBox>
			<children>
				<Label text="Add a new Label"/>
				<TextField fx:id="field" />
				<Button onAction="#handleSave" text="Add" />
			</children>
		</HBox>
		<Label id="label" text="Ecoute du webSocket"/>
		<VBox fx:id="messages">
			<children></children>
		</VBox>
	</children>	
</VBox>